{% import "_includes/forms" as forms %}

    {{ forms.dateField({
        required : field.required,
        label: 'Start date'|t('date-range'),
        id: name~'StartDate',
        name: name ~ '[start]',
        value: value.start ?? ''
    }) }}

    {% if field.showStartTime %}
        {{ forms.timeField({
            label: 'Start time'|t('date-range'),
            id: name~'StartTime',
            name: name ~ '[start]',
            value: value.start ?? ''

        }) }}
    {% endif %}

    {{ forms.dateField({
        required : field.required,
        label: 'End date'|t('date-range'),
        id: name~'EndDate',
        name: name ~ '[end]',
        value: value.end ?? ''
    }) }}

    {% if field.showEndTime %}
        {{ forms.timeField({
            label: 'End time'|t('date-range'),
            id: name~'EndTime',
            name: name ~ '[end]',
            value: value.end ?? ''
        }) }}
    {% endif %}

{% css %}

    [data-type="studioespresso\\daterange\\fields\\DateRangeField"] .field {
        float: left;
        width: min-content;
        margin-right: 20px;
        margin-bottom: 0px;
    }
    [data-type="studioespresso\\daterange\\fields\\DateRangeField"] .field:not(:first-of-type) {
        margin-top: 0px;

    }


{% endcss %}